<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.mobile.dao.SysCodeDao">
    
	<sql id="sysCodeColumns">
		a.phone AS "phone",
		a.code AS "code",
		a.export_time AS "exportTime"
	</sql>
	
	<sql id="sysCodeJoins">
	</sql>
    
	<select id="get" resultType="SysCode">
		SELECT 
			<include refid="sysCodeColumns"/>
		FROM sys_code a
		<include refid="sysCodeJoins"/>
		WHERE a.id = #{id}
	</select>

	<select id="getSysCodeByPhone" resultType="SysCode">
		SELECT
		<include refid="sysCodeColumns"/>
		FROM sys_code a
		<include refid="sysCodeJoins"/>
		WHERE a.phone = #{phone}
	</select>
	
	<select id="findList" resultType="SysCode">
		SELECT 
			<include refid="sysCodeColumns"/>
		FROM sys_code a
		<include refid="sysCodeJoins"/>
		<where>
			
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="SysCode">
		SELECT 
			<include refid="sysCodeColumns"/>
		FROM sys_code a
		<include refid="sysCodeJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO sys_code(
			phone,
			code,
			export_time
		) VALUES (
			#{phone},
			#{code},
			#{exportTime}
		)
	</insert>
	
	<update id="update">
		UPDATE sys_code SET 	
			phone = #{phone},
			code = #{code},
			export_time = #{exportTime}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM sys_code
		WHERE phone = #{phone}
	</update>
	
</mapper>